<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cities_item"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/cities_item_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Название города"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cities_item_countryname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Название страны"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/cities_item_cityname"
        app:layout_constraintTop_toBottomOf="@+id/cities_item_cityname" />
</android.support.constraint.ConstraintLayout>