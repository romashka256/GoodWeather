<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/week_day_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        android:text="Суббота"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_daily_item"
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/month_day_daily_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/week_day_item"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/month_day_daily_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        android:text="24 октября"
        app:layout_constraintStart_toStartOf="@+id/week_day_item"
        app:layout_constraintTop_toBottomOf="@+id/week_day_item" />

    <TextView
        android:id="@+id/max_day_daily_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="8dp"
        android:text="9"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="@+id/month_day_daily_item"
        app:layout_constraintStart_toEndOf="@+id/month_day_daily_item"
        app:layout_constraintTop_toTopOf="@+id/week_day_item"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/min_day_daily_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="0"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/max_day_daily_item"
        app:layout_constraintStart_toEndOf="@+id/max_day_daily_item"
        app:layout_constraintTop_toTopOf="@+id/max_day_daily_item" />

</android.support.constraint.ConstraintLayout>